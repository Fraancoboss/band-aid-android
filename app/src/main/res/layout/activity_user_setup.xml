<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/user_setup_title"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/labelAge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:labelFor="@id/inputAge"
            android:text="@string/user_setup_age_label"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputAge"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_setup_age"
            android:inputType="number" />

        <TextView
            android:id="@+id/labelWeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:labelFor="@id/inputWeight"
            android:text="@string/user_setup_weight_label"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputWeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_setup_weight"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/labelHeight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:labelFor="@id/inputHeight"
            android:text="@string/user_setup_height_label"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputHeight"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_setup_height"
            android:inputType="numberDecimal" />

        <TextView
            android:id="@+id/labelSex"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:labelFor="@id/spinnerSex"
            android:text="@string/user_setup_sex_label"
            android:textSize="14sp" />

        <Spinner
            android:id="@+id/spinnerSex"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/textSexNote"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="@string/user_setup_sex_note"
            android:textSize="12sp" />

        <TextView
            android:id="@+id/labelDiseases"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:labelFor="@id/inputDiseases"
            android:text="@string/user_setup_diseases_label"
            android:textSize="14sp" />

        <EditText
            android:id="@+id/inputDiseases"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/user_setup_diseases"
            android:inputType="textMultiLine" />

        <Button
            android:id="@+id/buttonSaveContinue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/user_setup_save_continue" />
    </LinearLayout>
</ScrollView>
